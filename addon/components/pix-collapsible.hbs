<div class='pix-collapsible {{if this.isUnCollapsed 'pix-collapsible--uncollapsed'}}' ...attributes>

  <button
    type="button"
    {{on "click" this.toggleCollapsible}}
    class='pix-collapsible__title {{if this.isUnCollapsed 'pix-collapsible__title--uncollapsed'}}'
  >
    <span>
      {{#if @titleIcon}}
        <FaIcon @icon={{@titleIcon}} class="pix-collapsible-title__icon" />
      {{/if}}
      {{this.title}}
    </span>

    <FaIcon
      @icon="{{if this.isCollapsed 'plus' 'minus'}}"
      class="pix-collapsible-title__icon" />
  </button>

  {{#if this.isUnCollapsed}}
    <div class='pix-collapsible__content'>
      {{yield}}
    </div>
  {{/if}}
</div>
