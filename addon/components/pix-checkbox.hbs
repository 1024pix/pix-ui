<div class="pix-checkbox {{@class}}">
  <input
    type="checkbox"
    id={{this.id}}
    class={{this.inputClasses}}
    checked={{@checked}}
    ...attributes
  />

  <label class={{this.labelClasses}} for={{this.id}}>
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      <span>yield required to give a label for PixCheckbox.</span>
    {{/if}}
  </label>
</div>